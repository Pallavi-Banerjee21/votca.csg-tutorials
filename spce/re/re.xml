<cg>
  <!-- reference AA topology and trajectory files -->
  <ref>
    <top>aa.tpr</top>
    <trj>aa.trr</trj>
  </ref>
  <!-- AA to CG mapping files -->
  <map>map.xml</map>
  <!-- specify neighbor list search alogrithm simple or grid -->
  <nbsearch>grid</nbsearch>
  <!-- non-bonded interaction entry -->
  <non-bonded>
    <!-- name of the interaction -->
    <name>CG-CG</name>
    <!-- specify type of CG pair -->
    <type1>CG</type1>
    <type2>CG</type2>
    <!-- function form for the potential -->
    <!-- can be LJ126, LJG, or BSPL -->
    <function>LJG</function>
    <!-- for B-splines need to specify number of knots/coefficients to be optimized -->
    <n_bspl_coeff>30</n_bspl_coeff>
    <!-- specify how many end coefficients must be zeros to ensure pot and forces go smoothly to zero -->
    <!-- so total B-spline coefficients = n_bspl_coeff + n_bspl_cut_coeff -->
    <n_bspl_cut_coeff>4</n_bspl_cut_coeff>
    <!-- min and max distance for pot max=rcutoff -->
    <!-- these values are also used to write pot tables -->
    <min>0.24</min>
    <max>1.0</max>
    <step>0.002</step>
    <!-- name of the table for gromacs run -->
    <inverse>
      <gromacs>
        <table>table_CG_CG.xvg</table>
      </gromacs>
   </inverse>
  </non-bonded>
 <inverse>
    <!-- System T = 300*0.00831451 kBT units -->
    <kBT>2.4942</kBT>
    <!-- use gromacs as simulation program -->
    <program>gromacs</program>
    <!-- gromacs specific options -->
    <gromacs>
      <!-- trash so many frames at the beginning -->
      <equi_time>0</equi_time>
      <!-- grid for table*.xvg !-->
      <table_bins>0.002</table_bins>
      <!-- cut the potential at this value (gromacs bug) -->
      <pot_max>1000000</pot_max>
      <!-- extend the tables to this value -->
      <table_end>2.5</table_end>
      <!-- topology + trajectory. Be careful, do not change yet! -->
      <index>index.ndx</index>
      <topol>topol.top</topol>
      <grompp>
        <opts>-maxwarn 1 </opts>
      </grompp>
      <mdrun>
	<opts>-v -nt 8</opts>
      </mdrun>
      <mdp>grompp.mdp</mdp>
      <topol_out>topol.tpr</topol_out>
      <traj_type>trr</traj_type>
      <conf_out>confout.gro</conf_out>
      <cutoff_check>yes</cutoff_check>
    </gromacs>
    <!-- these files are copied for each new run -->
    <filelist>grompp.mdp topol.top table.xvg index.ndx</filelist>
    <!-- do so many iterations -->
    <iterations_max>100</iterations_max>
    <!-- ibi: inverse biltzmann imc: inverse monte carlo re: relative entropy-->
    <method>re</method>
    <re>
      <!-- relative entropy program name -->
      <!-- default path is votcadir/bin -->
      <csg_reupdate>
        <command>csg_reupdate</command>
        <opts></opts>
      </csg_reupdate>
      <!-- relaxation parameter in Newton-Raphson update -->
      <relax>0.5</relax>
    </re>
    <!-- for relative entropy method convergence check is enforced by selecting type 're' -->
    <!-- convergence is checked by comparing 2-norm of relative  parameter update against tol value -->
    <convergence_check>
      <type>re</type>
      <tol>1.0e-3</tol>
    </convergence_check>
    <!-- directory for user scripts -->
    <scriptdir></scriptdir>
    <!-- write log to this file -->
    <log_file>inverse.log</log_file>
    <!-- write restart step to this file -->
    <restart_file>restart_points.log</restart_file>
  </inverse>
</cg>

